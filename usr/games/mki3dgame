#!/bin/sh

HERE=$(dirname "$(readlink -f "${0}")"); # this script is in $MOUNT/usr/games; $MOUNT should be the mounting point
echo $HERE
MOUNT=`cd $HERE; cd ../.. ; pwd` 
XDG_DATA_DIRS="$MOUNT/usr/share:$XDG_DATA_DIRS"; export XDG_DATA_DIRS
MKI3DGAME_ASSETS="$MOUNT/usr/share/games/mki3dgame/assets"; export MKI3DGAME_ASSETS
exec "$MOUNT/usr/games/mki3dgame.bin" "$@"
